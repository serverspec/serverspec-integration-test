source 'https://rubygems.org'

case ENV['APPVEYOR_REPO_NAME'].split("/").last
when "specinfra"
  gem "specinfra", path: "../../"
  gem "serverspec", github: "mizzy/serverspec"
when "serverspec"
  gem "specinfra", github: "mizzy/specinfra"
  gem "serverspec", path: "../../"
else
  gem "specinfra", github: "mizzy/specinfra"
  gem "serverspec", github: "mizzy/serverspec"
end

gem 'winrm', "< 2.0"

if RbConfig::CONFIG['MAJOR'] == "1"
  gem 'net-ssh', "< 3.0"
end
